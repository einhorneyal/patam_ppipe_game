<BorderPane prefHeight="467.0" prefWidth="507.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PipeMazeClientMainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" onAction="#openFile" text="Load">
            <items>
              <MenuItem mnemonicParsing="false" text="From disk" />
                  <MenuItem mnemonicParsing="false" text="From server" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" onAction="#openFile" text="Save">
               <items>
                  <MenuItem mnemonicParsing="false" text="To disk" />
                  <MenuItem mnemonicParsing="false" text="Score" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Solve" />
          <Menu mnemonicParsing="false" text="Server Config" />
            <Menu mnemonicParsing="false" onAction="#openFile" text="Theme">
               <items>
                  <MenuItem mnemonicParsing="false" text="Ninja turtles" />
                  <MenuItem mnemonicParsing="false" text="Rat and cheese" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" onAction="#openFile" text="View">
               <items>
                  <MenuItem mnemonicParsing="false" text="TOP 10" />
                  <MenuItem mnemonicParsing="false" text="Statistics" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Status" />
         </children>
      </HBox>
   </bottom>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
